@namespace BlazorDemo.Client.Components
@inherits LayerComponentBase

<MainLayout Title="@Title" SubTitle="Demonstration of Kenova">
    <TopContent>
        <Toolbar Buttons="@toolbar" />
    </TopContent>
    <FillContent>

        @if (Model.CreateNew == false)
        {
            <Rail>
                <InputInt32 CaptionLeft CaptionWidth="120" InputBoxWidth="140" Caption="Order Id" FieldExpression="() => Model.order_id" Enabled="false" />
            </Rail>
        }

        <Rail>
            <InputDate AutoFocus CaptionLeft CaptionWidth="120" InputBoxWidth="160" Caption="Order date" FieldExpression="() => Model.order_date" />
        </Rail>

        <Rail>
            <InputInt32Nullable CaptionWidth="120" InputBoxWidth="100" Caption="Customer" FieldExpression="() => Model.customer_id"
                                CaptionLeft RemarkRight
                                ShowZoomButton="true" ZoomButtonClicked="CustomerZoomClicked" />
        </Rail>

        <Rail>
            <InputInt32 CaptionWidth="120" InputBoxWidth="100"
                        ShowZoomButton ZoomButtonClicked="StoreZoomClicked"
                        Caption="Store ID" FieldExpression="() => Model.store_id"
                        CaptionLeft RemarkRight />
        </Rail>

        <Rail>
            <InputInt32 CaptionWidth="120" InputBoxWidth="100" 
                        ShowZoomButton ZoomButtonClicked="StaffZoomClicked"
                        Caption="Staff ID" FieldExpression="() => Model.staff_id"
                        CaptionLeft RemarkRight />

        </Rail>

        <Rail>
            <DropdownListBasic CaptionWidth="120" InputBoxWidth="140" Caption="Order status" FieldExpression="() => Model.order_status"
                               CaptionLeft RemarkRight
                               ValueType="byte" Items="@Model.Statusses" />
        </Rail>

    </FillContent>
</MainLayout>

